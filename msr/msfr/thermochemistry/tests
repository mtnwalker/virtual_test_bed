[Tests]
  # Syntax checks
  [thermo_syntax]
    type = RunApp
    input = 'thermo.i'
    check_input = True
    executable_pattern = 'blue_crab*|moose*|griffin*|pronghorn*|bison*|fenix*'
  []
  # Regression tests with CSV output over a minimum amount of time steps/computation
  [thermo_regression]
    prereq = thermo_syntax
    type = CSVDiff
    input = 'thermo.i'
    csvdiff = 'thermo_out.csv'
    executable_pattern = 'blue_crab*|moose*|griffin*|pronghorn*|bison*|fenix*'
    # Fuel temperature is out of bounds for MGXS
    allow_warnings = true
    min_parallel = 8
    max_time = 300
    method = 'opt'
  []
[]
